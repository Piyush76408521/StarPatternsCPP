// Write a C++ problem to print the square using (*) without returning the value.



#include <bits/stdc++.h>
using namespace std;

void printSquare(int n) {
    for (int i = 1; i <= n; i++) {  // Iterate over each row
        for (int j = 1; j <= n; j++) {  // Iterate over each column
            cout << "* ";
        }
        cout << endl;
    }
}

int main() {
    int n;
    cout << "Enter the size of the square: ";
    cin >> n;
    printSquare(n); // Call the function to print the square
    return 0;  // End of the program
}

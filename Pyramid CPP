// Write a C++ problem to print the pyramids using (*) without returning the value.



#include <bits/stdc++.h>
using namespace std;

void printPyramid(int n) {
    for (int i = 1; i <= n; i++) {
        // Print leading spaces
        for (int j = 1; j <= n - i; j++) {
            cout << " ";
        }
        // Print stars
        for (int j = 1; j <= (2 * i - 1); j++) {
            cout << "*";
        }
        cout << endl;
    }
}

int main() {
    int n;
    cout << "Enter the number of rows for the pyramid: ";
    cin >> n;  // Number of rows for the pyramid
    printPyramid(n);
    return 0;
}
